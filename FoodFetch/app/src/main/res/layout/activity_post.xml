<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group14.foodfetch.PostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.01"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/titleInput"
                    android:layout_width="269dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:hint="title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/foodTypeInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="food type"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06"
                android:orientation="vertical"
                android:weightSum="1">

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:animationCache="false"
                    android:contextClickable="false"
                    android:datePickerMode="spinner"
                    android:fadeScrollbars="true"
                    android:yearListItemTextAppearance="@style/TextAppearance.AppCompat"
                    tools:calendarViewShown="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:orientation="vertical">

                <Button
                    android:id="@+id/picInput"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="choose picture" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/descriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.27"
                    android:ems="10"
                    android:hint="description"
                    android:inputType="textMultiLine" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="addPost"
            android:text="publish" />

    </LinearLayout>
</RelativeLayout>
